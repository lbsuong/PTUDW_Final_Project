<div class="container mt-5 mb-5" style="min-width: 80vw; min-height: 80vh">
    {{!-- VIEW CART ZONE --}}
    <div class="float-left" style="width: 70%;">
        <div class="card">
            <div class="card-header">
                <h1>Shopping Cart</h1>
            </div>

            <div class="card-body">
                {{!-- CART --}}
                <div>
                    <table class="table table-striped">
                        <tbody>
                            {{#each profile.cart}}
                            <tr>
                                <th scope="row"></th>
                                <td>
                                    <img class="rounded border" style="height: 100px;"
                                        src="../../public/img/courses/{{this.id}}/small_thumbnail.jpg" alt="thumbnail">
                                </td>
                                <td>
                                    <p class="d-inline-block"><b>{{this.title}}</b></p>
                                    <p>{{this.tinydes}}</p>
                                </td>
                                <td><a href="">Remove</a>
                                    <a href="">Move to wishlist</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>

                {{!-- WISH LIST --}}
                <div>

                </div>

            </div>

            <div class="card-footer">
                <h5>You might also like</h5>
            </div>
        </div>
    </div>
    {{!-- CHECK OUT ZONE --}}
    <div class="float-right" style="width: 25%;">
        <div class="card position-fixed w-25">
            <div class="card-header text-center">
                <h2>Check Out</h2>
            </div>
            <div class="card-body">
                <h3>Total</h3>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
</div>

{{#section 'js'}}

{{/section}}