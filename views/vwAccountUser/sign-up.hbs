{{#section 'css'}}
  <link rel="stylesheet" href="../css/sign-up.css">
{{/section}}

    <div id="id01">
    <form class="modal-content animate" action="">
    <div class="container">
      {{!-- <h1 class="text-center">Sign Up</h1> --}}
      <p class="text-center">Please fill in this form to create an account.</p>
      <hr>
      <label for="username"><b>Username</b></label>
      <input type="text" placeholder="Enter Your Username" name="username" required>

<label for="name"><b>Full Name</b></label>
      <input type="text" placeholder="Enter Your Full Name" name="name" required>

      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" required>

      

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>

      <label for="psw-repeat"><b>Repeat Password</b></label>
      <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

      <p class="text-center">By creating an account you agree to our <a href="#" class="text-primary">Terms & Privacy</a>.</p>

      <div class="clearfix row justify-content-center pb-3">
        <button type="submit" class="submitbtn bg-primary rounded">Sign Up</button>
      </div>
      <div class="container text-center pt-4 bg-light rounded">
        <p>Already have an account? <a href="/sign-in"><b>Log In</b></a></p>
      </div>
    </div>
  </form>
</div>

