{{#section 'onlyjs'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">
{{#each course}}
<script>
    $(function () {
        $('.rating{{id}}').rateYo({
            starWidth: '15px',
            readOnly: true,
            rating: {{ rate }},
    });
  });
</script>
{{/each}}
{{/section}}


{{>nav-left}}
<div id="main" class="mt-5">
    <div class="m-auto" style="width: 80vw;">
        <div class="card w-100">
            <div class="card-header text-center">
                <h1>Your Courses</h1>
            </div>
            <div class="card-body">
                {{#if course}}
                <div class="row m-auto">
                    {{#each course}}
                    {{>lecCourseCard}}
                    {{/each}}
                </div>
                {{#if c_pageItems}}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {{#unless c_canGoPrevious}}disabled{{/unless}}">
                            <a class="page-link" href="?c={{c_previousPage}}" tabindex="-1"
                                aria-disabled="true">Previous</a>
                        </li>
                        {{#each c_pageItems}}
                        {{#if isActive}}
                        <li class="page-item active"><a class="page-link" href="?c={{value}}">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?c={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item {{#unless c_canGoNext}}disabled{{/unless}}">
                            <a class="page-link" href="?c={{c_nextPage}}">Next</a>
                        </li>
                    </ul>
                </nav>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>