{{>nav-left}}
<div id="main" class="mt-5">
    <div class="m-auto" style="width: 80vw;">
        <div class="card w-100">
            <div class="card-header text-center">
                <h1>Your Courses</h1>
            </div>
            <div class="card-body">
                {{#if course}}
                <div class="row m-auto">
                    {{#each course}}
                    <div class="col-sm-4 mb-5 d-flex align-items-stretch">
                        <div class="card ml-auto mr-auto" style="width: 18rem;">
                            <img src="{{smallthumbnaillink}}" class="card-img-top imgBorder" alt="{{title}}">
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{lecturername}}</h6>
                                <span class="text-danger"
                                    style="vertical-align: middle;"><strong>{{rate}}</strong></span>
                                <div class="rating{{id}}" style="display: inline-block;"></div>
                                <span style="vertical-align: middle; color: #6C757D">({{format numrate}})</span>
                                {{!-- <p class="card-text">{{tinydes}}</p> --}}
                                <p>
                                    <strong>${{format_real_num promotionalprice}}</strong>
                                    &nbsp;
                                    <del style="color: #6C757D;">${{format_real_num originalprice}}</del>
                                </p>
                                <p class="card-text"><small class="text-muted">Category: </small><a
                                        href="/category/{{categoryid}}"
                                        class="card-link"><small>{{categoryname}}</small></a>
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-primary mr-1" href="/lecturer/course/{{id}}" role="button">
                                        <i class="fas fa-info-circle"></i>
                                        Detail
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{#if c_pageItems}}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {{#unless c_canGoPrevious}}disabled{{/unless}}">
                            <a class="page-link" href="?c={{c_previousPage}}" tabindex="-1"
                                aria-disabled="true">Previous</a>
                        </li>
                        {{#each c_pageItems}}
                        {{#if isActive}}
                        <li class="page-item active"><a class="page-link" href="?c={{value}}">{{value}}</a></li>
                        {{else}}
                        <li class="page-item"><a class="page-link" href="?c={{value}}">{{value}}</a></li>
                        {{/if}}
                        {{/each}}
                        <li class="page-item {{#unless c_canGoNext}}disabled{{/unless}}">
                            <a class="page-link" href="?c={{c_nextPage}}">Next</a>
                        </li>
                    </ul>
                </nav>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>